<!DOCTYPE html>
<html>
<head>
	<title>Board</title>
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<style type="text/css">
		body{
			margin:30px auto;
			text-align: center ;
			background-color: cyan ;
		}
		form{
			margin-top: 30px ;
			padding: 30px ;
		}
		input, select{
			margin:20px;
		}
		.list li{
			width: 90% ;
			font-size: 20px ;
			border-bottom:1px solid red;
			padding: 15px ;
			margin-top:20px;
			margin-bottom:20px;
		}
		.list{
			text-align: center;
		}
		ul li:last-child{
			border:none;
		}
		.board{
			width:40%;
			background-color: yellow;
			border-radius: 15px ;
			margin-left:30%;
		}
		.title{
			font-size: 30px;
			padding: 10px ;
			border-bottom:1px solid orange;
		}
		.content{
			text-align: left;
			margin-top: 20px ;
		}
		ul{
			list-style-type: none ;
		}
		.cross{
			float: right;
			right: 20px ;
		}
		.cross:hover{
			cursor: pointer; 
		}
		.cross img{
			width:12px;
			height: 12px ;
		}
		.cross img:hover{
			text-shadow: 10px 10px;
		}
		.list li a{
			padding-bottom: 20px ;
			text-decoration: none; 
		}
		.list li a:hover{
			padding-bottom: 20px ;
			text-decoration: none; 
			color: red ;
		}
		.addNote{
			padding: 5px ;
			border-radius: 5px ;
			margin-left: 10% ;
			width: 80% ;
			text-align: center;
			font-size: 30px ;
			color: yellow ;
			background-color: orange ;
		}
		.addNote:hover{
			cursor: pointer; 
			transition-duration: 0.5s ;
			background-color: red ;
		}
		.viewRequests h2{
			font-size: 20px;
			text-align: center;
		}
		.viewRequests ul li{
			width: 80% ;
			font-size: 20px ;
			border-bottom:1px solid red;
			padding: 15px ;
			margin-top:20px;
			margin-bottom:20px;
		}

		.viewRequests ul li:last-child{
			border:none;
		}
		.viewRequests li a{
			padding-bottom: 20px ;
			text-decoration: none; 
		}
		.viewRequests li a:hover{
			padding-bottom: 20px ;
			text-decoration: none; 
			color: red ;
		}
	</style>
</head>
<body>
	<% include header.ejs %>
	<div class="board">
		<div class="title">NOTICE</div>
		<div class="content">
			<ul class="list">
				<% for(var i=0; i<notices.length;i++){%>
					<%if(notices[i].can_be_displayed){%>
						<li><a href="board/view_notice/<%= notices[i].header%>"><%= notices[i].header%></a><%if(type === 'teacher'){%>
						<a href="/delete/<%= notices[i].header %>"><span class="cross" ><img src="images/glyphicons/png/glyphicons-208-remove.png"></span></a>
					<%}%>
				</li>
					<%}%>
				<%}%>
			</ul>

			<%if(type === 'cr'){%>
				<div class="viewRequests">
					<h2 class="title">VIEW REQUESTS</h2>
					<ul>
						<% for(var i=0; i<notices.length;i++){%>
						<%if(!notices[i].can_be_displayed){%>
						<li><a href="board/view_notice/<%= notices[i].header%>"><%= notices[i].header%></a>
						<a href="/moderation/approve/<%= notices[i].header %>"><span class="cross gly" ><img src="images/glyphicons/png/glyphicons-433-plus.png"></span></a>
						<%}%>
						<%}%>
					</ul>
				</div>
			<%}%>

			 <%if(type === 'teacher' || type=== 'cr'){%>
				<a href="/add_new" style="text-decoration: none"><div class="addNote">ADD NOTICE</div></a>
			<%}%>


		</div>
	</div>
	<% include scripts.ejs %>
</body>
</html>
