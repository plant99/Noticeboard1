<!DOCTYPE html>
<html>
<head>
	<title>Sign Up</title>
	<link rel="stylesheet" type="text/css" href="css/style.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<style type="text/css">
		body{
			margin:30px auto;
			text-align: center ;
			background-color: cyan ;
		}
		form{
			margin-top: 30px ;
			padding: 30px ;
		}
		input, select{
			margin:20px;
		}
		.jumbotron h1{
			font-size: 26px ;
		}

		.notification{
			border-radius: 10px ;
			padding:20px ;
			background-color: yellow ;
			color: red ;
			font-size: 20px ;
		}
	</style>
</head>
<body>
	<%if(message){%>

	<div class="notificationBox"><p class="notification">User with the same username exists, you might want to <a href="/login">login</a></p></div>
	<%}%>
	<h1>SignUp to use NoticeBoard</h1>
	<form method="post" action="/signup" onsubmit="return validateForm();">
		<label>Username:<input type="text" name="username"></label>
		<br>
		<label>Password:<input type="password" name="password"></label>
		<br>
		<!--
		<label>What are you?
			<select name="type">
			<option value="teacher">TEACHER</option>
			<option value="student">STUDENT</option>
		</select>
		</label>
		 -->
		<br>
		<input type="submit" value="Submit">
	</form>
	<script type="text/javascript" src="javascripts/jquery.min.js"></script>
	<script type="text/javascript">
		function validateForm(){
			if( (document.forms[0]['username'] != "") && (document.forms[0]['password']) )
				return true ;
		}
		function notify(text){
			var p = document.createElement('p') ;
			p.innerHTML = text ;
			p.setAttribute('class', 'notification') ;
			console.log(p)
			document.querySelector('.notificationBox').appendChild(p) ;
		}
		setTimeout(function(){
			$('.notificationBox').remove()
		}, 5000)
	</script>
</body>
</html>